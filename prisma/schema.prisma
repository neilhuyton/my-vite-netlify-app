// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                          String   @id @default(uuid())
  email                       String   @unique
  password                    String
  verificationToken           String?  // Add for email verification
  isEmailVerified             Boolean  @default(false) // Add for email verification status
  resetPasswordToken          String?  // Add for password reset
  resetPasswordTokenExpiresAt DateTime? // Add for password reset expiration
  createdAt                   DateTime @default(now())
  updatedAt                   DateTime @updatedAt
  weights                     WeightMeasurement[]
  goal                        Goal?
  @@index([createdAt])
}

model WeightMeasurement {
  id        String   @id @default(uuid())
  userId    String
  weightKg  Float
  note      String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@index([createdAt])
}

model Goal {
  id            String   @id @default(uuid())
  userId        String   @unique
  goalWeightKg  Float
  startWeightKg Float
  goalSetAt     DateTime @default(now())
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}