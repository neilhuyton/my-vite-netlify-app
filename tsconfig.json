// tsconfig.json
{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "netlify/functions/trpc": ["netlify/functions/trpc.ts"]
    },
    "types": ["vite/client", "@testing-library/jest-dom"] // Add Jest-DOM types
  },
  "include": ["src/**/*", "vite-env.d.ts", "vitest.setup.ts"], // Include setup file
  "exclude": ["dist", "node_modules", "netlify/functions/dist/**/*"],
  "references": [{ "path": "./netlify/functions/tsconfig.json" }]
}