{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "netlify/functions/trpc": ["netlify/functions/trpc.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "netlify/functions/dist/**/*"],
  "references": [{ "path": "./netlify/functions/tsconfig.json" }]
}